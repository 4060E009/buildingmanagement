<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:onClick="close_view"
            android:id="@+id/closeBtn"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_android_cms_app_bar_close"
            android:translationZ="14dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/titleText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/forgotresidentcode"
            android:textColor="@color/forgotresidentcode"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:translationZ="14dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="38dp"
            app:layout_constraintStart_toStartOf="@id/closeBtn"
            app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/forgotrelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="-144dp">

        <ImageView
            android:id="@+id/forgot"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_android_cms_thumbnail_forgot_password" />

        <TextView
            android:id="@+id/textview7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot"
            android:layout_marginTop="20dp"
            android:text="@string/forgot"
            android:textAlignment="center"
            android:textColor="@color/Choosecommunity"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="16dp"
            android:textSize="18dp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>