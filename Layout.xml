<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <View
        android:id="@+id/mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="55dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/returnBtn"
        android:layout_width="27dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_android_cms_app_bar_back"
        android:translationZ="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <RelativeLayout
        android:id="@+id/loginrelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/logintext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="@string/login"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/landingbutton1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/Choosecommunity"
            android:textColor="@color/Choosecommunity"
            android:layout_below="@id/logintext"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:stateListAnimator="@null"
            android:background="@drawable/shape_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"/>

        <Button
            android:id="@+id/landingbutton2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/Choosecommunity2"
            android:textColor="@color/Choosecommunity"
            android:layout_below="@id/landingbutton1"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:stateListAnimator="@null"
            android:background="@drawable/shape"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"/>

        <TextView
            android:id="@+id/textview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logintext"
            android:textSize="14dp"
            android:textColor="@color/loading"
            android:layout_below="@id/landingbutton2"
            android:gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"/>


        <Button
            android:id="@+id/landingbutton3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/login"
            android:textColor="@color/Choosecommunity"
            android:layout_below="@id/textview3"
            android:textSize="14dp"
            android:layout_marginTop="275dp"
            android:stateListAnimator="@null"
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/buttonbackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/textview4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy"
            android:textSize="14dp"
            android:textColor="@color/Choosecommunity"
            android:layout_below="@id/landingbutton3"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textview5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Policy"
            android:textSize="14dp"
            android:textColor="@color/loading"
            android:layout_below="@id/landingbutton3"
            android:gravity="right|center_vertical"
            android:layout_marginRight="55dp"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
